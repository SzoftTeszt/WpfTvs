<UserControl x:Class="WpfTvs.Pages.Settings_Page"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfTvs.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <local:Elem Title="Network Setting" Kind="Wifi"/>
            <local:Elem Title="Time Setting" Kind="Timelapse" />
            <local:Elem Title="Common" Kind="Information"  />
            <local:Elem Title="About Us" Kind="Wifi"/>
        </StackPanel>    
    </Grid>
</UserControl>
